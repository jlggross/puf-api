{
	"name": "puf-api",
	"version": "0.0.0",
	"main": "index.js",
	"author": {
		"name": "Jo√£o Gross",
		"email": "joaolggross@gmail.com"
	},
	"license": "MIT",
	"private": true,
	"scripts": {
		"fix": "run-s \"fix:* {@}\" --",
		"fix:lint": "eslint --fix --no-error-on-unmatched-pattern",
		"fix:format": "prettier --write",
		"format": "yarn fix:format 'src/**/*.(js|ts|md|json)'",
		"lint": "yarn fix:lint src/**/*.{js,ts,md,json}",
		"test": "yarn jest",
		"prebuild": "rimraf ./dist",
		"build": "babel src --extensions \".js\" --ignore \"*.spec.js,*.test.js\" --out-dir dist --copy-files",
		"dev": "nodemon -L --exec babel-node -- -r dotenv-safe/config src/index.js"
	},
	"commitlint": {
		"extends": [
			"@commitlint/config-conventional"
		]
	},
	"lint-staged": {
		"./src/**/*.{js,md,json}": [
			"yarn fix"
		]
	},
	"devDependencies": {
		"@babel/cli": "^7.14.5",
		"@babel/core": "^7.14.6",
		"@babel/node": "^7.14.5",
		"@babel/plugin-proposal-optional-chaining": "^7.14.5",
		"@babel/preset-env": "^7.14.5",
		"@commitlint/cli": "^12.1.4",
		"@commitlint/config-conventional": "^12.1.4",
		"babel-plugin-module-resolver": "^4.1.0",
		"eslint": "^7.28.0",
		"eslint-config-prettier": "^8.3.0",
		"eslint-plugin-json": "^3.0.0",
		"eslint-plugin-prettier": "^3.4.0",
		"husky": "^6.0.0",
		"jest": "^27.0.5",
		"lint-staged": "^11.0.0",
		"nodemon": "^2.0.7",
		"npm-run-all": "^4.1.5",
		"prettier": "^2.3.1",
		"supertest": "^6.1.3"
	},
	"dependencies": {
		"@koa/router": "^10.0.0",
		"@prisma/client": "2.25.0",
		"bcrypt": "^5.0.1",
		"bcryptjs": "^2.4.3",
		"dotenv": "^10.0.0",
		"dotenv-safe": "^8.2.0",
		"jsonwebtoken": "^8.5.1",
		"koa": "^2.13.1",
		"koa-bodyparser": "^4.3.0",
		"prisma": "2.25.0"
	}
}
